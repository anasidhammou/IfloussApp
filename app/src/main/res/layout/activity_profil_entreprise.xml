<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#262626"
    tools:context=".Entreprise.ProfilEntrepriseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/btn_theme_color"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp">

        <ImageView
            android:id="@+id/btn_logout"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:adjustViewBounds="true"
            android:background="@drawable/btn_click_theme"
            android:clickable="true"
            android:onClick="logout"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/image" />


        <Space
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content" />

        <TextView

            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="@dimen/_20sdp" />


        <Space
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:adjustViewBounds="true"
            android:clickable="false"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_menu"
            android:visibility="invisible" />



    </LinearLayout>

    <ImageView

        android:onClick="backhome"
        android:layout_margin="@dimen/_10sdp"
        android:id="@+id/phot_back"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="left"
        android:src="@drawable/leftw" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView

                android:textColor="@color/white"
                android:textSize="20dp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:layout_margin="30dp"
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profil" />

            <LinearLayout
                android:layout_margin="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_170sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/downloadpic"
                    android:textColor="@color/btn_theme_color"
                    android:textSize="@dimen/_12sdp" />


                <ImageView
                    android:id="@+id/image"
                    android:onClick="onupload"
                    android:layout_margin="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:src="@drawable/profil"/>

            </LinearLayout>


            <LinearLayout
                android:layout_margin="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textAlignment="center"
                    android:id="@+id/txt_complet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />


                <TextView
                    android:layout_width="@dimen/_145sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:gravity="center"

                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fullname"
                    android:textColor="@color/btn_theme_color"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <Space
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp" />

            <LinearLayout
                android:layout_margin="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textAlignment="center"
                    android:id="@+id/txt_Mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />


                <TextView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/emal"
                    android:textColor="@color/btn_theme_color"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <Space
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp" />

            <LinearLayout
                android:layout_margin="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textAlignment="center"
                    android:id="@+id/text_phoneW"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />


                <TextView
                    android:layout_width="@dimen/_115sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:gravity="center"

                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/whatsapp"
                    android:textColor="@color/btn_theme_color"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <Space
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp" />

            <LinearLayout
                android:gravity="right"
                android:layout_gravity="right"
                android:layout_margin="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/RIB"
                    android:textColor="@color/btn_theme_color"
                    android:textSize="@dimen/_12sdp" />

                <Space
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp" />



                <EditText
                    android:focusable="true"
                    android:paddingStart="10dp"
                    android:layout_margin="20dp"
                    android:id="@+id/edt_rib"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/RIB"
                    android:layoutDirection="rtl"
                    android:inputType="textEmailAddress"
                    android:paddingEnd="@dimen/_10sdp"
                    android:background="@drawable/rounded_border_edittext"
                    />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="إختيار البنك"
                    android:textColor="@color/btn_theme_color"
                    android:textSize="@dimen/_12sdp" />

                <Spinner
                    android:paddingStart="10dp"
                    android:layout_margin="20dp"
                    android:id="@+id/spinner_ville"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/rounded_border_edittext"
                    android:layoutDirection="rtl"
                    android:textAlignment="textEnd"
                    />

            </LinearLayout>

            <Space
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp" />

            <LinearLayout
                android:gravity="right"
                android:layout_gravity="right"
                android:layout_margin="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/changepass"
                    android:textColor="@color/btn_theme_color"
                    android:textSize="@dimen/_12sdp" />

                <Space
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp" />

                <EditText
                    android:focusable="true"
                    android:paddingStart="10dp"
                    android:layout_margin="20dp"
                    android:id="@+id/edt_olpass"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/textoldpass"
                    android:layoutDirection="rtl"
                    android:inputType="textEmailAddress"
                    android:paddingEnd="@dimen/_10sdp"
                    android:background="@drawable/rounded_border_edittext"
                    />


                <EditText
                    android:focusable="true"
                    android:paddingStart="10dp"
                    android:layout_margin="20dp"
                    android:id="@+id/edt_newpass"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/textnewpass"
                    android:layoutDirection="rtl"
                    android:inputType="textEmailAddress"
                    android:paddingEnd="@dimen/_10sdp"
                    android:background="@drawable/rounded_border_edittext"
                    />



                <EditText
                    android:focusable="true"
                    android:paddingStart="10dp"
                    android:layout_margin="20dp"
                    android:id="@+id/edt_confpass"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/textconfirpass"
                    android:layoutDirection="rtl"
                    android:inputType="textEmailAddress"
                    android:paddingEnd="@dimen/_10sdp"
                    android:background="@drawable/rounded_border_edittext"
                    />

            </LinearLayout>


            <Button
                android:onClick="validate"
                android:background="@drawable/btn_click_theme"
                android:id="@+id/button"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_height="60dp"
                android:text="@string/validate"/>



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</LinearLayout>