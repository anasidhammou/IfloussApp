<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262626"
    android:orientation="vertical"
    tools:context=".listbuyproductActivity">

    <LinearLayout

        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/btn_theme_color"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp">

            <ImageView
                android:onClick="onlogout"
                android:id="@+id/btn_logout"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:adjustViewBounds="true"
                android:background="@drawable/btn_click_theme"
                android:clickable="true"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/image" />


            <Space
                android:layout_width="@dimen/_40sdp"
                android:layout_height="wrap_content" />

            <TextView

                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="@dimen/_20sdp" />


            <Space
                android:layout_width="@dimen/_40sdp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:adjustViewBounds="true"
                android:clickable="false"
                android:gravity="center"
                android:visibility="invisible"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_menu" />



        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView

                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="sans-serif"
                android:text="@string/commande_title"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/phot_prod"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_commande" />


            <Space
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_20sdp" />


            <LinearLayout
                android:layout_margin="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">




                <TextView
                    android:id="@+id/text_entreprise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nom_entreprise_new"
                    android:textColor="@color/btn_theme_color"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>
            <Space
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp" />

            <LinearLayout
                android:layout_margin="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_nomprod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nom_prod"
                    android:textColor="@color/btn_theme_color"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>

            <Space
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp" />
            <LinearLayout
                android:layout_margin="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_prixprod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_prod"
                    android:textColor="@color/btn_theme_color"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>

            <EditText
                android:id="@+id/edt_nom_client"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:background="@drawable/rounded_border_edittext"
                android:focusable="true"
                android:hint="@string/nameclient"
                android:inputType="text"
                android:layoutDirection="rtl"
                android:textAlignment="textStart"
                android:paddingStart="10dp"
                android:paddingEnd="@dimen/_10sdp"/>

            <EditText
                android:id="@+id/edt_phone_client"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:background="@drawable/rounded_border_edittext"
                android:focusable="true"
                android:hint="@string/phoneclient"
                android:inputType="text"
                android:layoutDirection="rtl"
                android:textAlignment="textStart"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="10dp" />

            <EditText
                android:id="@+id/edt_adresse_client"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:background="@drawable/rounded_border_edittext"
                android:focusable="true"
                android:hint="@string/adresclient"
                android:inputType="text"
                android:layoutDirection="rtl"
                android:paddingEnd="@dimen/_10sdp"
                android:textAlignment="textStart"
                android:paddingStart="10dp" />

            <Spinner
                android:paddingStart="10dp"
                android:layout_margin="20dp"
                android:id="@+id/spinner_ville"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/rounded_border_edittext"
                android:layoutDirection="rtl"
                android:textAlignment="textEnd"
                />


            <EditText
                android:id="@+id/edt_motif"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:background="@drawable/rounded_border_edittext"
                android:focusable="true"
                android:hint="@string/motif"
                android:inputType="text"
                android:layoutDirection="rtl"
                android:paddingEnd="@dimen/_10sdp"
                android:textAlignment="textStart"
                android:paddingStart="10dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="sans-serif"
                android:text="@string/type_paiement"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <RadioGroup
                android:layoutDirection="rtl"
                android:layout_gravity="right"
                android:id="@+id/radioGroup_character"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp">

                <RadioButton
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:id="@+id/radioButton_Pl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="الدفع عند الاستلام" />

                <RadioButton
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:id="@+id/radioButton_virement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="الدفع عن طريق التحويل المصرفي" />
            </RadioGroup>



            <Button
                android:onClick="buyit"
                android:id="@+id/commander"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_80sdp"
                android:background="@drawable/btn_click_theme"
                android:text="@string/app_commade_prod"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />



        </LinearLayout>

    </ScrollView>

</LinearLayout>