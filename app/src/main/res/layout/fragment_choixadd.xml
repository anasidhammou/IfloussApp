<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Entreprise.Fragment.ChoixaddFragment">

    <LinearLayout

        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/btn_theme_color"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp">

            <ImageView
                android:id="@+id/btn_logout"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:adjustViewBounds="true"
                android:background="@drawable/btn_click_theme"
                android:clickable="true"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/image" />


            <Space
                android:layout_width="@dimen/_40sdp"
                android:layout_height="wrap_content" />

            <TextView

                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="@dimen/_20sdp" />


            <Space
                android:layout_width="@dimen/_40sdp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:visibility="visible"
                android:onClick="onMaBanqueClicked"
                android:src="@drawable/ic_menu" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#262626"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <Button

                android:background="@drawable/btn_click_theme"
                android:id="@+id/product"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_height="60dp"
                android:text="إضافة منتج"/>

            <Button
                android:background="@drawable/btn_click_theme"
                android:id="@+id/hmiza"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_height="60dp"
                android:text="إضافة هميزة"/>





        </LinearLayout>

    </LinearLayout>


</LinearLayout>